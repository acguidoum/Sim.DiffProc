citHeader("To cite package 'Sim.DiffProc' in publications use: ")
     
 if(!exists("meta") || is.null(meta)) meta <- packageDescription("Sim.DiffProc")
 year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
 vers <- paste("R package version", meta$Version)
 
 citEntry(entry="Manual",
		  title = "Sim.DiffProc: Simulation of Diffusion Processes.",
		  author = personList(as.person("Arsalane Chouaib Guidoum"),as.person("Kamal Boukhetala")),
		  year = year,
		  note = vers,
		  url  = paste("https://cran.r-project.org/package=Sim.DiffProc"),
		  textVersion =
		  paste("Arsalane Chouaib Guidoum and Kamal Boukhetala (",
				year,
				"). Sim.DiffProc: Simulation of Diffusion Processes.", vers, ".", "https://cran.r-project.org/package=Sim.DiffProc"
				, sep=""))
				
							